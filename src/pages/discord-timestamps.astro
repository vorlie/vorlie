---
import Layout from '../layouts/Layout.astro';
---
<Layout title="Vorlie | Discord Timestamp Generator" description="Get a dynamic date-time display in your Discord messages. Choose your time and copy the code.">
    <p class="header-text">Discord Timestamp Generator</p>
    <div class="wrapper">
        <div class="container">
            <p>Get a dynamic date-time display in your Discord messages. Choose your time and copy the code below.</p>
        </div>
        <div class="container">
            <span>Date</span><input type="date" id="d">
            <span>Time</span><input type="time" id="hm">
            <span>Type</span>
            <select id="t">
                <option value="t">short time</option>
                <option value="T">long time</option>
                <option value="d">short date</option>
                <option value="D">long date</option>
                <option value="f">long date with short time</option>
                <option value="F">long date with day of week and short time</option>
                <option value="R" selected>relative</option>
            </select>
            <span>Output</span><span id="preview"></span>
            <input type="text" readonly id="code" title="Press Ctrl/Cmd+C to copy">
            <button id="copy">Copy to clipboard</button>
            <button id="current">Reset to current time</button>
        </div>
    </div>
</Layout>
<script src="/src/scripts/timestamps.js"></script>
<style>
.header-text{
    margin: 0;
    font-size: 35px;
    color: var(--color-text);
    padding-bottom: 5px;
    font-weight: 600;
}
.wrapper{
    border-radius: var(--roundness);
    background-color: var(--color-main-background-secondary);
    padding: 1rem;
    max-width: 50rem;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.233);
}
.container {
    display: grid;
    grid-template-columns: 1fr max-content;
    width: 50rem;
    margin: 0 auto;
}
.container p{
    padding-bottom: 1rem;
    text-align: left;
}

.container>* {
    margin: 0.2rem;
}

#current {
    grid-column: span 2;
}

input,
select,
button {
    background: var(--color-main-background-secondary);
    color: var(--color-text);
    padding: 0.3rem;
    border: 1px solid transparent;
    border-radius: 5px;
    transition: 0.2s ease;
    outline: none;
    &:hover{
        background: var(--color-1);
        color: var(--color-text-hover);
    }
}

#code {
    font-family: monospace
}

@media (max-width: 50rem) {
    div.container {
        display: flex;
        flex-direction: column;
        width: 90%;
    }

    div.container p {
        text-align: center;
    }

    div.container>* {
        margin: 1rem 0.2rem
    }
    .header-text{
        text-align: center;
    }
}
</style>