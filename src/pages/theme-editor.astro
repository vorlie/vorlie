---
import Layout from "../layouts/Layout.astro";
import "../styles/globals-editor.css";
import "../styles/theme-editor-page.css";
---
<script src="../scripts/themeEditor.ts"></script>
<Layout title="Vorlie | Theme Editor" description="A theme editor for my desktop application called Iota's Notepad">
    <div class="theme-editor-container">
        <!-- Sidebar -->
        <div class="theme-sidebar">
            <h1 class="theme-sidebar-title">Theme Editor</h1>

            <!-- Controls -->
            <div class="theme-controls">
                <input type="file" accept=".json" id="importTheme" style="display:none">
                <button id="importThemeButton" class="importThemeButton">Import Theme</button>
                <button id="exportThemeButton" class="exportThemeButton">Export Theme</button>
                <button id="resetThemeButton" class="resetThemeButton">Reset</button>
                <input type="text" id="themeNameInput" placeholder="Enter theme name" />
            </div>

            <!-- Theme Inputs -->
            <div id="themeInputs" class="theme-inputs"></div>
        </div>

        <!-- Live Preview -->
        <div id="theme-preview" class="theme-preview">
            <div class="body-notepad">
                <div class="titlebar-notepad">
                    <div class="titlebar-branding-notepad">
                        <img src="/images/notepad-icon.png" alt="Iota's Notepad" class="titlebar-icon-notepad"/>
                        <h2 class="titlebar-h2-notepad">Iota's Notepad</h2>
                    </div>
                    <div class="titlebar-actions-notepad">
                        <button title="Exports a selected note from the modal list" class="button-notepad">Export</button>
                        <input type="file" accept=".txt"id="importNotesInput"style="display:none"/>
                        <button title="Imports a note" class="button-notepad">Import</button>
                        <button title="Open settings" class="button-notepad">Settings</button>
                    </div>
                </div>
                <div class="main-content-notepad">
                    <div class="sidebar-notepad">
                        <div class="sidebar-header-notepad">
                            <h2 class="header-h2-notepad">Notes</h2>
                            <div class="sidebar-actions-notepad">
                                <select id="sort-options" class="dropdown-notepad">
                                    <option value="dateModified">Date Modified</option>
                                    <option value="dateCreated">Date Created</option>
                                    <option value="alphabetical">Alphabetical</option>
                                    <option value="index">Index</option>
                                </select>
                                <button class="button-notepad"
                                    ><i class="bi bi-plus-lg"></i></button
                                >
                            </div>
                        </div>
                        <input type="text" class="search-bar-notepad" placeholder="Search notes..."/>
                        <ul class="note-list-notepad">
                            <li class="note-item-notepad selected-notepad" data-id="_dfup4w08o">
                                <span class="note-title-notepad">Note 1</span>
                                <span class="note-date-notepad">ID: _dfup4w08o • Modified today at 07:03</span>
                            </li>
                            <li class="note-item-notepad" data-id="_6kdv85bwy">
                                <span class="note-title-notepad">Note 2</span>
                                <span class="note-date-notepad">ID: _6kdv85bwy • Modified yesterday at 03:52</span>
                            </li>
                        </ul>
                    </div>
                    <div class="editor-notepad">
                        <p class="status-notepad">Save status:</p>
                        <textarea placeholder="Write your note here..."></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>
</Layout>
