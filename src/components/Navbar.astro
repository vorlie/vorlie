---
import NavItem from './react/NavItem';
---
<script src="../scripts/toggleHamburger.ts"></script>
<div class="navbar">
  <div class="navbar-inner-container">
    <a class="lanyard" href="https://discord.com/users/614807913302851594">
      <div class="vorlie">
        <img id="avatar" src="" alt="User Avatar" />
        <img id="avatar-deco" src="" alt="Avatar Decoration" />
        <div class="userinfo"></div>
      </div>
    </a>
    <button popovertarget="nav-hamburgertarget" id="nav-hamburger" class="nav-hamburger">
      <i class="bi bi-list fontsize2"></i>
    </button>
    <div popover id="nav-hamburgertarget" class="hamburger-menu" >
      <NavItem id="home" link="/" linkText="Home" iconString="house-fill" />
      <NavItem id="projects" link="/projects" linkText="Projects" iconString="code-square" />
      <NavItem id="specs" link="/pc-specs" linkText="Specs" iconString="pci-card" />
      <NavItem id="credits" link="/credits" linkText="Credits" iconString="info-square-fill" />
      <hr /> <!-- Social Links -->
      <NavItem id="discord" link="https://discord.gg/ujYCjUwu6U" linkText="Discord" iconString="discord" subClass='subcolor' newPage />
      <NavItem id="github" link="https://github.com/vorlie" linkText="GitHub" iconString="github" subClass='subcolor' newPage />
      <NavItem id="youtube" link="https://youtube.com/@vve1_" linkText="YouTube" iconString="youtube" subClass='subcolor' newPage />
    </div>
    <div class="nav-items">
      <NavItem id="home" link="/" linkText="Home" iconString="house-fill" title='Home page' />
      <NavItem id="projects" link="/projects" linkText="Projects" iconString="code-square" title='Projects' />
      <NavItem id="specs" link="/pc-specs" linkText="Specs" iconString="pci-card" title='My computer specification' />
      <NavItem id="credits" link="/credits" linkText="Credits" iconString="info-square-fill" title='Credits' />
    </div>
    <div class="nav-items">
      <NavItem id="discord" link="https://discord.gg/ujYCjUwu6U" iconString="discord" subClass='subcolor' newPage title='Discord' />
      <NavItem id="github" link="https://github.com/vorlie" iconString="github" subClass='subcolor' newPage title='GitHub' />
      <NavItem id="youtube" link="https://youtube.com/@vve1_" iconString="youtube" subClass='subcolor' newPage title='YouTube' />
    </div>
  </div>
  <div id="invisible-close-button" class="invisible-close-button"></div>
  <div id="backdrop" class="backdrop"></div>
</div>
